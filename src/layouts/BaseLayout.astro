---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import type { Lang } from '../i18n/index';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang: Lang;
  ogImage?: string;
  noindex?: boolean;
  slug?: string;
  translations?: Record<string, string>;
}

const {
  title,
  description = '',
  lang,
  ogImage,
  noindex = false,
  slug = '',
  translations = {},
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

// Build hreflang alternate links
const siteBase = Astro.site?.toString().replace(/\/$/, '') || 'https://sitehub.dk';
const hreflangs: { lang: string; href: string }[] = [];

// Current page (always included)
const currentPath = Astro.url.pathname;
hreflangs.push({ lang: lang === 'da' ? 'da' : lang, href: `${siteBase}${currentPath}` });

// Add alternates from translations map
const langPathPrefix: Record<string, string> = { da: '', en: '/en', nn: '/nn', sv: '/sv', nl: '/nl' };
if (translations) {
  for (const [altLang, altSlug] of Object.entries(translations)) {
    if (altLang === lang) continue;
    const prefix = langPathPrefix[altLang] ?? `/${altLang}`;
    const altPath = altSlug === 'home' || altSlug === `home-${altLang}`
      ? `${prefix}/`
      : `${prefix}/${altSlug}/`;
    hreflangs.push({ lang: altLang, href: `${siteBase}${altPath}` });
  }
}
---

<!doctype html>
<html lang={lang === 'da' ? 'da-DK' : lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    {noindex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Hreflang alternates -->
    {hreflangs.map((alt) => (
      <link rel="alternate" hreflang={alt.lang} href={alt.href} />
    ))}
    {hreflangs.length > 0 && (
      <link rel="alternate" hreflang="x-default" href={hreflangs.find(h => h.lang === 'da')?.href || hreflangs[0].href} />
    )}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={lang === 'da' ? 'da_DK' : lang === 'nn' ? 'nb_NO' : lang === 'sv' ? 'sv_SE' : lang === 'nl' ? 'nl_NL' : 'en_US'} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="SiteHub" />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- JSON-LD Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'SiteHub',
      url: 'https://sitehub.dk',
      description: 'Byggepladslogistik, -drift og data',
      address: {
        '@type': 'PostalAddress',
        addressCountry: 'DK',
      },
    })} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header lang={lang} slug={slug} translations={translations} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />
    <CookieBanner lang={lang} />
  </body>
</html>
