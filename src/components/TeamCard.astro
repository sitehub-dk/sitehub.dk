---
import type { ImageMetadata } from 'astro';

interface Props {
  image: ImageMetadata;
  name: string;
  title?: string;
}

const { image, name, title } = Astro.props;
---

<div class="card-bordered flex flex-col">
  <img
    src={image.src}
    alt={name}
    width={image.width}
    height={image.height}
    loading="lazy"
    class="w-full object-cover"
    style="height: 300px;"
  />
  <div class="p-6 text-center">
    <h3 class="font-semibold text-sitehub-dark text-lg">{name}</h3>
    {title && <p class="text-sitehub-gray mt-1">{title}</p>}
  </div>
</div>
