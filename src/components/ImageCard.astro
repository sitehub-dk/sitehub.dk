---
import type { ImageMetadata } from 'astro';

interface Props {
  image: ImageMetadata;
  alt?: string;
  overlay?: string;
  height?: string;
}

const { image, alt = '', overlay, height = '400px' } = Astro.props;
---

<div class="image-rounded relative" style={`height: ${height};`}>
  <img
    src={image.src}
    alt={alt}
    width={image.width}
    height={image.height}
    loading="lazy"
    class="w-full h-full object-cover"
  />
  {overlay && (
    <div class="absolute inset-0 flex items-end p-6 bg-gradient-to-t from-black/50 to-transparent rounded-[30px]">
      <p class="text-white font-semibold text-xl">{overlay}</p>
    </div>
  )}
</div>
