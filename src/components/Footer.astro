---
import { t, langPath, type Lang } from '../i18n/index';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const prefix = langPath(lang);
const year = new Date().getFullYear();
---

<footer class="bg-sitehub-dark text-white/70">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <span class="text-sitehub-accent font-bold text-xl">SiteHub</span>
        <p class="mt-3 text-sm leading-relaxed">
          Byggepladslogistik, -drift og data
        </p>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="text-white font-semibold mb-3">Links</h3>
        <nav class="flex flex-col gap-2 text-sm">
          <a href={`${prefix}/`} class="hover:text-sitehub-accent transition-colors">{t(lang, 'nav.home')}</a>
          <a href={`${prefix}/${lang === 'da' ? 'om-os' : 'about'}/`} class="hover:text-sitehub-accent transition-colors">{t(lang, 'nav.about')}</a>
          <a href={`${prefix}/${lang === 'da' ? 'service' : 'services'}/`} class="hover:text-sitehub-accent transition-colors">{t(lang, 'nav.services')}</a>
          <a href={`${prefix}/${lang === 'da' ? 'kontakt' : 'contact'}/`} class="hover:text-sitehub-accent transition-colors">{t(lang, 'nav.contact')}</a>
        </nav>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white font-semibold mb-3">{t(lang, 'nav.contact')}</h3>
        <p class="text-sm">SiteHub ApS</p>
        <p class="text-sm">Denmark</p>
      </div>
    </div>

    <div class="border-t border-white/10 mt-8 pt-6 flex flex-col sm:flex-row justify-between items-center gap-4 text-sm">
      <p>&copy; {year} SiteHub ApS. {t(lang, 'footer.copyright')}</p>
      <a href={`${prefix}/cookie-policy/`} class="hover:text-sitehub-accent transition-colors">
        {t(lang, 'footer.cookiePolicy')}
      </a>
    </div>
  </div>
</footer>
