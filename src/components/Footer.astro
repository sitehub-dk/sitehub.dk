---
import { langPath, type Lang } from '../i18n/index';
import logoSvg from '../assets/logo.svg';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const prefix = langPath(lang);
const year = new Date().getFullYear();

const contactSlug = { da: 'kontakt', en: 'contact', nn: 'kontakt-oss', sv: 'kontakta-oss', nl: 'contact-ons' }[lang] ?? 'kontakt';
---

<footer class="bg-sitehub-dark">
  <div class="max-w-[1528px] mx-auto" style="padding: 60px 20px;">
    <div class="flex flex-col lg:flex-row items-center lg:items-end justify-between gap-8">
      <!-- Logo -->
      <div class="flex flex-col items-center lg:items-end" style="width: 340px; padding-bottom: 95px;">
        <img src={logoSvg.src} alt="SiteHub" width="189" height="50" style="height: 50px;" />
      </div>

      <!-- Copyright -->
      <div class="relative text-center" style="width: 642px; max-width: 100%;">
        <p class="text-white/50 text-base">&copy; Copyright SiteHub {year}</p>
      </div>

      <!-- Contact link -->
      <div class="flex justify-center lg:justify-end" style="width: 340px; padding-bottom: 95px;">
        <nav>
          <a
            href={`${prefix}/${contactSlug}/`}
            class="text-white/80 hover:text-sitehub-accent transition-colors"
            style="font-size: 16px;"
          >
            {contactSlug === 'kontakt' ? 'Kontakt' : contactSlug.charAt(0).toUpperCase() + contactSlug.slice(1).replace(/-/g, ' ')}
          </a>
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    position: relative;
  }
  @media (max-width: 1024px) {
    footer > div > div {
      flex-direction: column !important;
      align-items: center !important;
      padding: 50px 20px !important;
    }
    footer > div > div > div {
      width: auto !important;
      padding-bottom: 0 !important;
    }
  }
</style>
