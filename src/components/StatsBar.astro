---
interface Stat {
  value: string;
  label: string;
}

interface Props {
  heading?: string;
  stats: Stat[];
}

const { heading, stats } = Astro.props;
---

<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px; display: flex; flex-direction: column; gap: 64px;">
  {heading && (
    <div class="section-divider relative" style="text-align: center;">
      <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 64px); line-height: 1.2em; max-width: 721px; margin: 0 auto;">
        {heading}
      </h2>
      <div class="absolute left-1/2 -translate-x-1/2" style="bottom: -34px;">
        <img src="/src/assets/icons/icon-section-bg.svg" alt="" width="54" height="54" style="max-width: 54px;" />
      </div>
    </div>
  )}
  <div class="flex flex-wrap gap-8 justify-center">
    {stats.map((stat) => (
      <div class="stat-card text-center flex flex-col gap-4">
        <div class="stat-number">{stat.value}</div>
        <div class="stat-label">{stat.label}</div>
      </div>
    ))}
  </div>
</section>

<style>
  @media (max-width: 1024px) {
    section {
      padding: 64px 20px !important;
      gap: 32px !important;
    }
    .stat-card {
      min-width: 45% !important;
    }
  }
  @media (max-width: 767px) {
    section {
      padding: 50px 20px !important;
    }
    .stat-card {
      min-width: 100% !important;
    }
  }
</style>
