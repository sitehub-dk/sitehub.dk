---
interface Props {
  items: string[];
  iconColor?: string;
}

const { items, iconColor = '#FFD4A6' } = Astro.props;
---

<ul class="space-y-3">
  {items.map((item) => (
    <li class="flex items-start gap-3" style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      <svg
        class="flex-shrink-0 mt-1"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke={iconColor}
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M20 6L9 17l-5-5" />
      </svg>
      <span>{item}</span>
    </li>
  ))}
</ul>
