---
import type { ImageMetadata } from 'astro';

interface Props {
  icon: ImageMetadata;
  title: string;
  description?: string;
}

const { icon, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center gap-4 p-6">
  <img
    src={icon.src}
    alt={title}
    width="80"
    height="80"
    loading="lazy"
    style="width: 80px; height: 80px; object-fit: contain;"
  />
  <h3 class="font-semibold text-sitehub-dark" style="font-size: 20px; line-height: 1.3;">{title}</h3>
  {description && (
    <p class="text-sitehub-dark" style="font-size: 16px; line-height: 1.5;">{description}</p>
  )}
</div>
