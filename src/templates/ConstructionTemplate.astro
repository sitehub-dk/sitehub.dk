---
import type { Lang } from '../i18n/index';
import { constructionContent } from '../content/data/construction';
import HeroSection from '../components/HeroSection.astro';
import Button from '../components/Button.astro';

// Images
import heroBg from '../assets/images/vbHw_UGg.jpeg';

// Vector icons for the 4 position items
import vector1 from '../assets/icons/Vector1.svg';
import vector2 from '../assets/icons/Vector2.svg';
import vector3 from '../assets/icons/vector3.svg';
import vector4 from '../assets/icons/vector4.svg';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const c = constructionContent[lang];

const positionIcons = [vector1, vector2, vector3, vector4];
---

<!-- 1. Hero Section -->
<HeroSection
  title={c.hero.title}
  subtitle={c.hero.subtitle}
  bgImage={heroBg}
/>

<!-- 2. Why Section with Stats -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="flex flex-col gap-12">
    <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 64px); line-height: 1.2em;">
      {c.why.title}
    </h2>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.why.text1}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.why.text2}
    </p>
    <div class="flex flex-wrap gap-8 justify-center mt-8">
      {c.why.stats.map((stat) => (
        <div class="stat-card text-center flex flex-col gap-4">
          <div class="stat-number">{stat.value}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- 3. Responsibility Text -->
<section style="background-color: #FFD4A61A; padding: 128px 20px;">
  <div class="max-w-[1528px] mx-auto flex flex-col gap-8">
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.responsibility.text1}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.responsibility.text2}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.responsibility.text3}
    </p>
    <div>
      <Button href={c.responsibility.ctaHref}>{c.responsibility.cta}</Button>
    </div>
  </div>
</section>

<!-- 4. SiteHub Positions - 4 Cards -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
    {c.positions.map((position, index) => (
      <div class="card-bordered flex flex-col items-center text-center gap-6 p-8">
        <img
          src={positionIcons[index].src}
          alt={position.title}
          width="64"
          height="64"
          loading="lazy"
          style="width: 64px; height: 64px; object-fit: contain;"
        />
        <h3 class="font-semibold text-sitehub-dark" style="font-size: 20px; line-height: 1.3;">
          {position.title}
        </h3>
      </div>
    ))}
  </div>
</section>

<!-- 5. Verified & Fire Safety -->
<section style="background-color: #FFD4A61A; padding: 128px 20px;">
  <div class="max-w-[1528px] mx-auto flex flex-col gap-8">
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.verified.text1}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.verified.text2}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.verified.text3}
    </p>
  </div>
</section>

<!-- 6. Quote from CEO -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="flex flex-col items-center text-center gap-8">
    <blockquote class="text-sitehub-dark" style="font-size: clamp(22px, 3vw, 40px); font-weight: 600; line-height: 1.3; font-style: italic; max-width: 900px;">
      {c.quote.text}
    </blockquote>
    <div class="flex flex-col gap-1">
      <span class="font-semibold text-sitehub-dark" style="font-size: 20px;">
        - {c.quote.author}
      </span>
      <span class="text-sitehub-gray" style="font-size: 16px;">
        {c.quote.role}
      </span>
    </div>
  </div>
</section>

<style>
  @media (max-width: 1024px) {
    section {
      padding: 64px 20px !important;
    }
  }
  @media (max-width: 767px) {
    section {
      padding: 50px 20px !important;
    }
  }
</style>
