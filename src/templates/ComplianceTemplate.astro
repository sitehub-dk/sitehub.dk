---
import type { Lang } from '../i18n/index';
import { complianceContent } from '../content/data/compliance';
import HeroSection from '../components/HeroSection.astro';
import IconList from '../components/IconList.astro';

// Images
import heroBg from '../assets/images/1_KaW1R0.png';
import dashboardImg from '../assets/images/Operations-dashboard-anonymiseret.png';

// ESG Icons
import eIcon from '../assets/icons/e.svg';
import sIcon from '../assets/icons/s.svg';
import gIcon from '../assets/icons/g.svg';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const c = complianceContent[lang];

const esgIcons = [eIcon, sIcon, gIcon];
---

<!-- 1. Hero Section -->
<HeroSection
  title={c.hero.title}
  subtitle={c.hero.subtitle}
  bgImage={heroBg}
/>

<!-- 2. Intro Section -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="flex flex-col gap-8">
    <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 64px); line-height: 1.2em;">
      {c.intro.title}
    </h2>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.intro.text1}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.intro.text2}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.intro.text3}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.intro.text4}
    </p>
  </div>
</section>

<!-- 3. Data Collection -->
<section style="background-color: #FFD4A61A; padding: 128px 20px;">
  <div class="max-w-[1528px] mx-auto flex flex-col gap-8">
    <h3 class="font-semibold text-sitehub-dark" style="font-size: clamp(20px, 2vw, 32px); line-height: 1.3;">
      {c.dataCollection.title}
    </h3>
    <ul class="space-y-4">
      {c.dataCollection.items.map((item) => (
        <li class="flex items-start gap-3" style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
          <svg class="flex-shrink-0 mt-1" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FFD4A6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 6L9 17l-5-5" />
          </svg>
          <span><strong>{item.bold}</strong> {item.text}</span>
        </li>
      ))}
    </ul>
  </div>
</section>

<!-- 4. ESG Section -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="flex flex-wrap justify-center gap-12">
    {c.esg.items.map((item, index) => (
      <div class="flex flex-col items-center gap-4 p-8">
        <img
          src={esgIcons[index].src}
          alt={item.title}
          width="120"
          height="120"
          loading="lazy"
          style="width: 120px; height: 120px; object-fit: contain;"
        />
        <h3 class="font-semibold text-sitehub-dark" style="font-size: 24px; line-height: 1.3;">
          {item.title}
        </h3>
      </div>
    ))}
  </div>
</section>

<!-- 5. DGNB Section -->
<section style="background-color: #FFD4A61A; padding: 128px 20px;">
  <div class="max-w-[1528px] mx-auto flex flex-col gap-8">
    <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 48px); line-height: 1.2em;">
      {c.dgnb.title}
    </h2>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.dgnb.text1}
    </p>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.dgnb.text2}
    </p>
    <IconList items={c.dgnb.items} />
  </div>
</section>

<!-- 6. LCA Section -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="flex flex-col gap-8">
    <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 48px); line-height: 1.2em;">
      {c.lca.title}
    </h2>
    <p class="font-semibold" style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.lca.text}
    </p>
    <IconList items={c.lca.items} />
  </div>
</section>

<!-- 7. LEED Section -->
<section style="background-color: #FFD4A61A; padding: 128px 20px;">
  <div class="max-w-[1528px] mx-auto flex flex-col gap-8">
    <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 48px); line-height: 1.2em;">
      {c.leed.title}
    </h2>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.leed.text}
    </p>
    <IconList items={c.leed.items} />
  </div>
</section>

<!-- 8. BREEAM Section -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="flex flex-col gap-8">
    <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 48px); line-height: 1.2em;">
      {c.breeam.title}
    </h2>
    <p style="font-size: clamp(18px, 1.5vw, 24px); line-height: 1.5;">
      {c.breeam.text}
    </p>
  </div>
</section>

<!-- 9. Dashboards Section -->
<section style="background-color: #FFD4A61A; padding: 128px 20px;">
  <div class="max-w-[1528px] mx-auto flex flex-col gap-8">
    <h2 class="font-semibold text-sitehub-dark text-center" style="font-size: clamp(26px, 4vw, 48px); line-height: 1.2em;">
      {c.dashboards.title}
    </h2>
    <img
      src={dashboardImg.src}
      alt={c.dashboards.title}
      width={dashboardImg.width}
      height={dashboardImg.height}
      loading="lazy"
      style="width: 100%; border-radius: 16px; object-fit: cover;"
    />
  </div>
</section>

<style>
  @media (max-width: 1024px) {
    section {
      padding: 64px 20px !important;
    }
  }
  @media (max-width: 767px) {
    section {
      padding: 50px 20px !important;
    }
  }
</style>
