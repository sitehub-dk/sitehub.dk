---
import type { Lang } from '../i18n/index';
import { projectsContent } from '../content/data/projects';
import HeroSection from '../components/HeroSection.astro';
import ImageCard from '../components/ImageCard.astro';

// Images
import heroBg from '../assets/images/nNlP1hFQ.jpeg';
import projectImg1 from '../assets/images/ee1x-cX8.jpeg';
import projectImg2 from '../assets/images/G48dj9cU.jpeg';
import projectImg3 from '../assets/images/3pTx3Ev8.jpeg';
import projectImg4 from '../assets/images/Ay3Iuffg.jpeg';
import projectImg5 from '../assets/images/EBkxnnqc.jpeg';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const c = projectsContent[lang];

const projectImages = [projectImg1, projectImg2, projectImg3, projectImg4, projectImg5];
---

<!-- 1. Hero Section -->
<HeroSection
  title={c.hero.title}
  subtitle={c.hero.subtitle}
  bgImage={heroBg}
/>

<!-- 2. Project Cards -->
<section class="max-w-[1528px] mx-auto" style="padding: 128px 20px;">
  <div class="flex flex-col gap-24">
    {c.projects.map((project, index) => {
      const isReverse = index % 2 !== 0;
      return (
        <div class={`flex flex-col lg:flex-row gap-12 ${isReverse ? 'lg:flex-row-reverse' : ''}`}>
          <div class="flex-1 min-w-0">
            <ImageCard
              image={projectImages[index]}
              alt={project.name}
              height="500px"
            />
          </div>
          <div class="flex-1 min-w-0 flex flex-col gap-6">
            <h2 class="font-semibold text-sitehub-dark" style="font-size: clamp(26px, 4vw, 48px); line-height: 1.2em;">
              {project.name}
            </h2>
            <div class="flex flex-wrap gap-6">
              <div class="flex flex-col gap-1">
                <span class="font-semibold text-sitehub-dark" style="font-size: 14px; text-transform: uppercase; letter-spacing: 0.05em;">
                  {c.costLabel}
                </span>
                <span class="text-sitehub-dark" style="font-size: 18px;">
                  {project.cost}
                </span>
              </div>
              <div class="flex flex-col gap-1">
                <span class="font-semibold text-sitehub-dark" style="font-size: 14px; text-transform: uppercase; letter-spacing: 0.05em;">
                  {c.periodLabel}
                </span>
                <span class="text-sitehub-dark" style="font-size: 18px;">
                  {project.period}
                </span>
              </div>
            </div>
            <div class="flex flex-col gap-2">
              <h4 class="font-semibold text-sitehub-dark" style="font-size: 16px;">
                {c.descriptionLabel}:
              </h4>
              <p style="font-size: clamp(16px, 1.3vw, 20px); line-height: 1.5;">
                {project.description}
              </p>
            </div>
            <div class="flex flex-col gap-2">
              <h4 class="font-semibold text-sitehub-dark" style="font-size: 16px;">
                {c.deliverablesLabel}:
              </h4>
              <p style="font-size: clamp(16px, 1.3vw, 20px); line-height: 1.5;">
                {project.deliverables}
              </p>
            </div>
          </div>
        </div>
      );
    })}
  </div>
</section>

<style>
  @media (max-width: 1024px) {
    section {
      padding: 64px 20px !important;
    }
  }
  @media (max-width: 767px) {
    section {
      padding: 50px 20px !important;
    }
  }
</style>
